{{# partial "titulo" }}
	<title>Receta - QueComemos</title>
{{/partial}}

{{# partial "contenido" }}
<h1>Edicion de Receta</h1>
<br></br>
<body>
	<div class="container">
	<form action="/receta/{{id}}/editar" method= "POST">
<div class="row">
  <div class="col-md-1"> <strong>Receta:</strong> </div>
  	<div class="col-md-3">
  		<input type="text" name="nombre">
  	</div>
  	<div class="col-md-4">
			<div class="checkbox">
			 <label>
				 <input type="checkbox" id="blankCheckbox" {{#if favorita}} checked{{/if}}> <strong>Favorita</strong>
			 </label>
	 		</div>
		</div>
</div>
<br></br>
<div class="row">
  <div class="col-md-1"><strong>Calorias:</strong></div>
    	<div class="col-md-3">
  			<input type="myNumber" name="calorias">
  		</div>
  <div class="col-md-1"> <strong>Dificultad</strong> </div>
		<div class="col-md-2">
			<div class="form-group">
				<select class="form-control" name="dificultad">
					<option></option>
					<option>FACIL</option>
					<option>MEDIANA</option>
					<option>DIFICIL</option>
				</select>
			</div>
		</div>
  <div class="col-md-1"> <strong>Temporada</strong> </div>
		<div class="col-md-2">
			<div class="form-group">
				<select class="form-control" name="temporada">
					<option></option>
  				<option>INVIERNO</option>
  				<option>OTONIO</option>
  				<option>VERANO</option>
					<option>PRIMAVERA</option>
				</select>
			</div>
		</div>
	</div>

<br></br>

<div class="row">
	<div class="col-md-6"><strong>Ingredientes</strong>
  		<table class= "table table-bordered">
  			<td> <label>Nombre</label>
  			  	<select class="form-control" name="nombreIngrediente">
							{{#ingredientes}}
  							<option>{{nombre}}</option>
  						{{/ingredientes}}
						</select>
  			</td>
  			<td> <strong>Dosis</strong>
  				<select class="form-control" name="dosis">
						{{#ingredientes}}
  						<option>{{cantidad}}</option>
  					{{/ingredientes}}
				</select>
				</td>
  		</table>
  </div>

<div class="col-md-6"><strong>Condimentos</strong>
    <input type="myNumber" name="condimento">
			<input type="button" id="btAdd" value="AÃ±adir Condimento" class="bt" />
  </div>
</div>
</div>

			<div class="row">
  			<div class="col-md-6"> <strong>Proceso de Preparacion</strong> </div>
			</div>

			<textarea class="form-control" rows="5"></textarea>
			<br></br>
			<div class="row">
				<div class="col-md-6">
					<p class="text-center"><a class="btn btn-primary btn-lg" href="/receta/{{id}}" role="button">Volver</a></p>
				</div>
				<div class="col-md-6">
					<p class = "text-center"><button type="submit" class="btn btn-primary btn-lg">Guardar</button></p>
				</div>
			</div>
		</form>
	</div>
</body>
{{/partial}}

